{
  "name": "@vamdawn/swiss-kit",
  "version": "0.1.0",
  "description": "A collection of handy browser-based utilities",
  "type": "module",
  "license": "MIT",
  "author": "chen <vamdawn@outlook.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Vamdawn/swiss-kit.git"
  },
  "homepage": "https://github.com/Vamdawn/swiss-kit#readme",
  "bugs": {
    "url": "https://github.com/Vamdawn/swiss-kit/issues"
  },
  "keywords": [
    "utilities",
    "tools",
    "cli",
    "json",
    "base64",
    "uuid",
    "url-encoder",
    "color-converter",
    "timestamp"
  ],
  "engines": {
    "node": ">=18"
  },
  "bin": {
    "swiss-kit": "./dist/cli/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsup src/cli/index.ts --format esm --out-dir dist/cli --dts",
    "preview": "node dist/cli/index.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest",
    "test:run": "vitest run",
    "prepare": "simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged"
  },
  "lint-staged": {
    "*.{ts,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,html}": [
      "prettier --write"
    ]
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "simple-git-hooks"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.2.3",
    "@vitejs/plugin-vue": "^6.0.4",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-vue": "^10.7.0",
    "happy-dom": "^20.6.1",
    "js-yaml": "^4.1.1",
    "lint-staged": "^16.2.7",
    "naive-ui": "^2.43.2",
    "open": "^11.0.0",
    "prettier": "^3.8.1",
    "simple-git-hooks": "^2.13.1",
    "sirv": "^3.0.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "vue": "^3.5.28",
    "vue-router": "^5.0.2",
    "vue-tsc": "^3.2.4"
  }
}
